@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using Sandhata.eCommerce.Models
@model List<Product>
@{
    ViewData["Title"] = "Products List!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count>0)
{
<div class="text-center">
    <h1 class="mb-3">@ViewBag.PageTitle</h1>
    <hr />
    <p class="lead mb-4">@ViewBag.PageDescription</p>

    <div class="container-fluid px-2 px-md-3 px-lg-4">
        <div class="row g-3 g-md-4">
            @foreach (var product in Model)
            {
                <!-- Mobile-first responsive columns -->
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-lg bg-body-tertiary rounded product-card h-100">
                        <div class="position-relative">
                            <img src="~/@Url.Content(product.Picture)"
                                 class="card-img-top"
                                 alt="@product.ProductName"
                                 loading="lazy">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@product.ProductName">@product.ProductName</h5>
                            <p class="card-text flex-grow-1 text-muted small">@product.Description</p>
                            <hr class="my-3">
                            <div class="text-center mt-auto">
                                <div class="d-grid gap-2 d-md-block">
                                    <a class="btn btn-success btn-sm w-100 w-md-auto"
                                       asp-action="Details"
                                       asp-route-id="@product.ProductId">Show Details</a>
                                    <a class="btn btn-dark btn-sm w-100 w-md-auto"
                                       asp-area="Carts"
                                       asp-controller="Home"
                                       asp-action="AddToCart"
                                       asp-route-productId="@product.ProductId">Add To Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
}
else
{
    <h3>No Products Available Here!</h3>
}


